<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gjs.dao.WorkDao">

    <resultMap type="com.gjs.entity.Work" id="WorkMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="endTime" column="end_time" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="WorkMap">
        select id,
               name,
               end_time
        from work
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="WorkMap">
        select
        id, name, end_time
        from work
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="endTime != null">
                and end_time = #{endTime}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from work
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="endTime != null">
                and end_time = #{endTime}
            </if>
        </where>
    </select>
    <select id="queryAll" resultMap="WorkMap">
        select * from work
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into work(name, end_time)
        values (#{name}, #{endTime})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into work(name, end_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.endTime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into work(name, end_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.endTime})
        </foreach>
        on duplicate key update
        name = values(name),
        end_time = values(end_time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update work
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="endTime != null">
                end_time = #{endTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from work
        where id = #{id}
    </delete>

</mapper>

